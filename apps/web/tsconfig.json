{
  "exclude": ["node_modules"],
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "lib/*": ["src/lib/*"],
      "components/*": ["src/components/*"],
      "types": ["src/types/index.ts"],
      "configs": ["src/configs.ts"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts"]
}
